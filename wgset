##Install WG
mkdir /wg
cd /wg
curl -O https://raw.githubusercontent.com/angristan/wireguard-install/master/wireguard-install.sh
chmod +x wireguard-install.sh
./wireguard-install.sh


##Config WG client
ip link add dev wg1 type wireguard
wg setconf wg1 neth_wg.conf
ip address add 10.66.66.2/24 dev wg1
ip link set up dev wg1

##Config forward for 1 client

/etc/wireguard/${SERVER_WG_NIC}.conf
sysctl -w net.ipv4.ip_forward=1

PostUp = ip rule add from 10.148.30.7 lookup 200
PostUp = ip route add default dev wg1 table 200
PostUp = iptables -t nat -A POSTROUTING -o wg1 -j MASQUERADE

PostDown = ip rule delete from 10.148.30.7 lookup 200
PostDown = ip route delete default dev wg1 table 200
PostDown = iptables -t nat -D POSTROUTING -o wg1 -j MASQUERADE
